@model QRMenu.Web.ViewModels.NavbarViewModel

<nav class="bg-white dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700">
    <div class="flex items-center justify-between px-4 py-3">
        <!-- Left side -->
        <div>
            <button id="themeToggle" class="p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700">
                <i class="fas fa-sun text-gray-500 dark:text-gray-400 hidden dark:block"></i>
                <i class="fas fa-moon text-gray-500 dark:text-gray-400 block dark:hidden"></i>
            </button>
        </div>

        <!-- Right side -->
        <div class="flex items-center space-x-4">
            <!-- Notifications -->
            <div class="relative">
                <button id="notificationsButton" class="p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 relative">
                    <i class="fas fa-bell text-gray-500 dark:text-gray-400"></i>
                    @if (Model.UnreadNotificationsCount > 0)
                    {
                        <span class="absolute -top-1 -right-1 px-2 py-1 text-xs font-bold leading-none text-red-100 bg-red-600 rounded-full">
                            @Model.UnreadNotificationsCount
                        </span>
                    }
                </button>

                <!-- Notifications Dropdown -->
                <div id="notificationsModal" class="hidden absolute right-0 mt-2 w-80 bg-white dark:bg-gray-800 rounded-lg shadow-lg ring-1 ring-black ring-opacity-5">
                    <div class="p-4">
                        <h3 class="text-lg font-medium text-gray-900 dark:text-gray-100">Bildirimler</h3>
                        <div class="mt-2 space-y-2">
                            <!-- Example notifications -->
                            <div class="p-2 hover:bg-gray-50 dark:hover:bg-gray-700 rounded-lg">
                                <p class="text-sm text-gray-700 dark:text-gray-300">Yeni bildirim örneği</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Profile Menu -->
            <div class="relative">
                <button id="profileButton" class="flex items-center space-x-3 p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700">
                    <img src="@Model.UserAvatar" alt="Profile" class="h-8 w-8 rounded-full">
                    <span class="text-sm font-medium text-gray-700 dark:text-gray-300">@Model.UserName</span>
                    <i class="fas fa-chevron-down text-gray-500 dark:text-gray-400"></i>
                </button>

                <!-- Profile Dropdown -->
                <div id="profileModal" class="hidden absolute right-0 mt-2 w-48 bg-white dark:bg-gray-800 rounded-lg shadow-lg ring-1 ring-black ring-opacity-5">
                    <div class="py-1">
                        <a href="#" class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">
                            Profil
                        </a>
                        <a href="/Account/Logout" class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">
                            Çıkış Yap
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</nav>